<h1>Cards</h1>

<ul class="long-list">
<% Card.all.sort_by{|card| card.player.name.downcase }each do |card| %>
<li><a href="/cards/<%= card.id %>"><%= card.player.name %>, <%= card.team.name %>, <%= card.position.name %>, <%= card.special_attribute %> -- <%= card.condition %></a></li>
<% end %>
</ul>
